<h1>Books</h1>
<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
    </tr>

    <tr>
        <%= @books.each do |f| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to Show, book_path(@book.id) %></td>
        <td><%= link_to Edit, edit_book_path(@book) %></td>
        <td><%= link_to Destroy, book_path(@book) method: :delete %></td>
    </tr>

</table>

<h2>New book</h2>

<%= form_with model:@book, local:ture do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<%= link_to "Create Book", book_path(@book) %>
<% end %>